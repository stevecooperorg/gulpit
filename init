# curl -s file:////Users/steve/IdeaProjects/gulpit/init | bash
# curl -s https://raw.githubusercontent.com/stevecooperorg/gulpit/master/init | bash

clear
rm package.json
rm go
rm gulpfile.js
rm -rf node_modules
npm init -y
npm install gulp --save-dev
npm install jshint --save-dev
npm install gulp-jshint --save-dev
npm install gulp-watch --save-dev
npm install jasmine --save-dev
npm install gulp-jasmine --save-dev
curl https://raw.githubusercontent.com/stevecooperorg/gulpit/master/gulpfile.js > gulpfile.js
curl -s https://raw.githubusercontent.com/stevecooperorg/gulpit/master/message
curl -s https://raw.githubusercontent.com/stevecooperorg/gulpit/master/go > go
chmod a+x go

clear

node ./node_modules/gulp/bin/gulp.js watch